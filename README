- перейти в директорию с проектом и запустить
vagrant up






sudo curl -fsSL -o /usr/share/keyrings/salt-archive-keyring.gpg https://repo.saltproject.io/py3/ubuntu/20.04/amd64/latest/salt-archive-keyring.gpg
echo "deb [signed-by=/usr/share/keyrings/salt-archive-keyring.gpg arch=amd64] https://repo.saltproject.io/py3/ubuntu/20.04/amd64/latest focal main" | sudo tee /etc/apt/sources.list.d/salt.list
sudo apt update
sudo apt install salt-master -y
sudo apt install salt-minion -y

/etc/salt/master
auto_accept: True
sudo systemctl restart salt-master

/etc/salt/minion
master: 192.168.6.2
sudo systemctl restart salt-minion
